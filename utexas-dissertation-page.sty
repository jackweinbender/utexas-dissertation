\ProvidesPackage{utexas-dissertation-page}[2016/07/06 Page styles for UTexas Dissertation]

\usepackage{utexas-dissertation-common}

% Set Page Geometry
\geometry{margin=1in,includefoot}

% Set Ragged Right
\usepackage[originalparameters]{ragged2e}
\RaggedRight
\setlength{\parindent}{0.5in}

% Global typographic properties (not Font family)
\setSpacing{2}

% Set Pagination to bottom/center
\pagestyle{plain}

% Global Quote Stuff
\renewenvironment{quote}{%
  \justifying%
  \begin{Spacing}{1.25}
  \setlength{\leftskip}{3em}%
  \setlength{\rightskip}{1in}%
  \setlength{\parindent}{\z@}%
  \setlength{\parskip}{12pt}%
  \ignorespaces
  }{\end{Spacing}}

% Block level language settings
\newenvironment{aramaictext}%
  {\begin{hebrewtext}}%
  {\end{hebrewtext}}
\newenvironment{hebrewtext}%
  {\begin{quote}%
    \sloppy%
    \selectlanguage{hebrew}}%
  {\end{quote}}
\newenvironment{greektext}{}{}

% Transliteration (Italics)
\newenvironment{transliteration}%
  {\begin{quote}%
    \sloppy%
    \selectlanguage{transliteration}}%
  {\end{quote}}

% Ethiopic (Font, Babel)
\newenvironment{ethiopictext}%
  {\begin{quote}%
    \sloppy%
    \selectlanguage{amharic}}%
  {\end{quote}}

% Translation (for English; just a wrapper for `quote`)
\newenvironment{translation}%
  {\begin{quote}}{\end{quote}}