\def\degreeabbr#1{\gdef\@degreeabbr{#1}}
\def\@degreeabbr{Ph.D.}
\renewenvironment{abstract}{
    \begin{frontmatters}
    \thispagestyle{empty}%
    \begin{center}

        \textit{\large \@title\\
        \@subtitle}\\[24pt]

        By\\[24pt]

        \textbf{\@author, \@degreeabbr,}\\
        \@institution, \@copyrightyear\\
        SUPERVISOR: \@supervisor
    \end{center}\par}%
    {\end{frontmatters}}

\newenvironment{frontmatters}{%
    \newgeometry{tmargin=1.5in,hmargin=1in}%
}{\restoregeometry}
