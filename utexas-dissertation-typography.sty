    [2017/07/06 Typography for UTexas Dissertation]

% Unicode Font and OpenType Support
\usepackage{fontspec}
\usepackage{csquotes}

% Language Support
\usepackage[nil,bidi=default]{babel}
    % Import Language INI files
    \babelprovide[import=en-US,main]{american}
    \babelprovide[import=he]{hebrew}
    \babelprovide[import=el]{polutonikogreek}
    \babelprovide[import=am]{amharic}
    \babelprovide{transliteration} 
        % \renewcommand\transliterationchaptername{Chapitula} 
        % \renewcommand\transliterationrefname{Refirenke} 
        % \renewcommand\transliterationhyphenmins{22}


        % Set Fonts for Languages
        \babelfont[american]{rm}%
            [Ligatures=TeX]{Linux Libertine O}
        \babelfont[transliteration]{rm}%
            [Ligatures=TeX]{Gentium Plus Italic}
        \babelfont[hebrew]{rm}%
            [Scale=1.1,Script=Hebrew,Ligatures=TeX,Contextuals=Alternate]%
                {SBL Hebrew}
        \babelfont[polutonikogreek]{rm}%
            [Ligatures=TeX,Contextuals=Alternate]%
                {SBL Greek}
        \babelfont[amharic]{rm}%
            [Scale=1.1,Script=Ethiopic,Ligatures=TeX,Contextuals=Alternate]%
                {Abyssinica SIL}
        

% Hebrew
\newcommand{\he}[1]{\hebrew{#1}}
% Aramaic (Aliased Hebrew)
\newcommand{\aram}[1]{\aramaic{#1}}
% Greek
\newcommand{\gk}[1]{\greek{#1}}
% Geez
\newcommand{\eth}[2]{\ethiopic{#1} %
    [\foreignlanguage{transliteration}{#2}]}

\newcommand{\translit}[1]{\foreignlanguage{transliteration}{#1}\xspace}
\newcommand{\aramaic}[1]{\foreignlanguage{hebrew}{#1}\xspace}
\newcommand{\hebrew}[1]{\foreignlanguage{hebrew}{#1}\xspace}
\newcommand{\greek}[1]{\foreignlanguage{polutonikogreek}{#1}\xspace}
\newcommand{\ethiopic}[1]{\foreignlanguage{amharic}{#1}\xspace}
    \newcommand{\kw}[1]{k\textsuperscript{w}#1\xspace}
    \newcommand{\qw}[1]{q\textsuperscript{w}#1\xspace}
    \newcommand{\gw}[1]{g\textsuperscript{w}#1\xspace}
    \newcommand{\xw}[1]{x\textsuperscript{w}#1\xspace}