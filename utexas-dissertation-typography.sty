\setmainfont{Linux Libertine O}
\setsansfont{Linux Biolinum O}
\setmonofont{Linux Libertine Mono O}

\IfFontExistsTF{SBL Hebrew}
    {\newfontfamily\hebrew{SBL Hebrew}[Scale=1.1,Script=Hebrew]}
    {\PackageWarning{UT Typography}{Install the SBL Hebrew font for the best experience. See: https://www.sbl-site.org/educational/biblicalfonts.aspx}}

\IfFontExistsTF{SBL Greek}
    {\newfontfamily\greek{SBL Greek}[Script=Greek]}
    {\PackageWarning{UT Typography}{Install the SBL Greek font for the best experience. See: https://www.sbl-site.org/educational/biblicalfonts.aspx}}